<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#e6b0e4"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#9C27B0"
                android:padding="25dp"
                android:text="পুষ্টি ক্যালকুলেটর "
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#00BCD4"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text"
                android:layout_toLeftOf="@+id/editText"

                android:layout_toStartOf="@+id/editText"
                android:padding="15dp"
                android:text="বয়স (বছর)"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#AD1457"
                android:textSize="23dp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/text1"
                android:layout_toEndOf="@+id/text2"
                android:layout_toRightOf="@+id/text2"
                android:ems="10"
                android:hint="২০ বছর"
                android:inputType="numberSigned"
                android:padding="15dp"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText"
                android:padding="15dp"
                android:text="উচ্চতা (সে: মি:) "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#AD1457"
                android:textSize="23dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/text2"
                android:layout_toRightOf="@+id/text2"
                android:ems="10"
                android:hint="১৬৪ (সে: মি:)"
                android:inputType="numberSigned"
                android:padding="15dp"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText2"
                android:padding="15dp"
                android:text="ওজন (কেজি)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#AD1457"
                android:textSize="23dp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/text2"
                android:layout_toRightOf="@+id/text2"
                android:ems="10"
                android:hint="৫৬ কেজি "
                android:inputType="numberSigned"
                android:padding="15dp"
                android:textAlignment="center"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText3"
                android:checked="false"
                android:padding="15dp"
                android:text="পুরুষ "
                android:textColor="#6A1B9A"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/checkBox"
                android:layout_alignStart="@+id/checkBox"
                android:layout_below="@+id/checkBox"
                android:checked="false"
                android:padding="15dp"
                android:text="মহিলা "
                android:textColor="#6A1B9A"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox2"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:padding="20dp"
                android:text="ক্যালকুলেট"
                android:textAlignment="center"
                android:textColor="#6A1B9A"
                android:textSize="18dp" />

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>